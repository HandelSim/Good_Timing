<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEventFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvAddevent"
        android:layout_width="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:text="Add Event"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/tvAddevent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:text="Name:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/NameT"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_below="@id/tvAddevent"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/tvName"
        android:hint="Enter event name here..."
        android:inputType="textCapWords"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/tvName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:text="Date:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/DateT"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_below="@id/tvName"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/tvDate"
        android:hint="dd/mm/yyyy"
        android:inputType="date"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Date"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_below="@id/NameT"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/DateT"
        android:drawableTop="@drawable/ic_baseline_access_time_24" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/tvDate"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:text="Time:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/TimeT"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_below="@id/tvDate"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/tvDate"
        android:hint="12:00"
        android:inputType="time"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Time"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_below="@id/tvDate"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/TimeT"
        android:drawableTop="@drawable/ic_baseline_access_time_24" />

    <Button
        android:id="@+id/Sunday"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_below="@id/TimeT"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_toLeftOf="@id/Monday"
        android:backgroundTint="@color/button_background_color"
        android:text="S" />

    <Button
        android:id="@+id/Monday"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_below="@id/TimeT"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/button_background_color"
        android:layout_toLeftOf="@id/Tuesday"
        android:text="M" />

    <Button
        android:id="@+id/Tuesday"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_below="@id/TimeT"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button_background_color"
        android:layout_toLeftOf="@id/Wednesday"
        android:text="T" />

    <Button
        android:id="@+id/Wednesday"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_below="@id/TimeT"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/button_background_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="W" />

    <Button
        android:id="@+id/Thursday"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_below="@id/TimeT"
        android:backgroundTint="@color/button_background_color"
        android:layout_toRightOf="@+id/Wednesday"
        android:text="T"
        />

    <Button
        android:id="@+id/Friday"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/TimeT"
        android:backgroundTint="@color/button_background_color"
        android:layout_toRightOf="@+id/Thursday"
        android:text="F"
        />

    <Button
        android:id="@+id/Saturday"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button_background_color"
        android:layout_below="@id/TimeT"
        android:layout_toRightOf="@+id/Friday"
        android:text="S"
        />

    <Button
        android:id="@+id/Done"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/Sunday"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="Done" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/Sunday"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@id/Cancel"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:text="Reset" />

</RelativeLayout>